{
  "name": "Gemini RAG MCP Server",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "mounts": [
    "source=gemini-rag-data,target=/workspace/data,type=volume",
    "source=gemini-rag-config,target=/workspace/config,type=volume"
  ],
  "workspaceFolder": "/workspace",
  "containerEnv": {
    "GEMINI_API_KEY": "${localEnv:GEMINI_API_KEY}",
    "RAG_CONFIG_PATH": "/workspace/config/rag_config.json",
    "DOCS_STORE_PATH": "/workspace/data/docs"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.debugpy"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true,
        "python.formatting.provider": "black"
      }
    }
  },
  "remoteUser": "vscode"
}